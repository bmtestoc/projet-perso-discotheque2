{% extends 'base.html.twig' %}

{% block title %}Add
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Add a disc</h1>
	</div>
	<div class="mb-3 ms-5">
		{{ form_start(form) }}
		{{ form_label(form.artist) }}
		{{ form_widget(form.artist) }}
		{{ form_label(form.album) }}
		{{ form_widget(form.album) }}
		{{ form_label(form.format) }}
		{{ form_widget(form.format) }}
		{{ form_rest(form) }}
		<div>
			<button type="submit" class="btn btn-primary ms-4 mt-3">Create</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
