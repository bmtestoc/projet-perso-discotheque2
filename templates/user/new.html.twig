{% extends 'base.html.twig' %}
{% block title %}Create new user
{% endblock %}
{% block body %}
	<div class="example-wrapper ms-5 mt-3">
		<h1>Create new User</h1>
	</div>
	{{ form_start(form, {'attr': {'id': 'new_edit_utilisateur'}}) }}
	<div class="row">
		<div class="col-12 ms-5 mt-3">
			{{ form_label(form.username) }}
			{{ form_widget(form.username) }}
		</div>
		<div class="col-12 ms-5 mt-3">
			{{ form_label(form.password) }}
			{{ form_widget(form.password) }}
		</div>
		<div class="col-12 ms-5 mt-3">
			<label for="verifpass">Password verification</label>
			<input type="password" id="verifpass" required>
		</div>
	</div>
	<button class="btn btn-primary ms-5 mt-3">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}
	<div class="ms-5 mt-3">
		<a href="{{ path('app_login') }}">Go to login page</a>
	</br>
	<a href="{{ path('user_index') }}">Back to user index</a>
</div>{% endblock %}
