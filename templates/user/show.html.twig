{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="example-wrapper ms-5 mt-3">
		<h1>User</h1>
	</div>

	<table class="table ms-5 mt-3">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Username</th>
				<td>{{ user.username }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>
	<div class="ms-5 mt-3">
		<a href="{{ path('user_index') }}">back to index</a>
	</div>
{% endblock %}
