{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<header>
		<ul class="nav justify-content-center">
			<li class="nav-item">
				<a class="nav-link active" aria-current="page" href="create">Add a disc</a>
			</li>
			<li class="nav-item">
				<a class="nav-link active" aria-current="page" href="user/users">Users</a>
			</li>
		</ul>
    	</header>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>My collection</h1>
</div>

 <table class="table table-striped table-hover" data-toggle="table" data-search="true">

 <thead>

    <tr>

      <th scope="col" data-sortable="true" data-field="artist">Artist</th>
      <th scope="col" data-sortable="true" data-field="album">Album</th>
      <th scope="col" data-sortable="true" data-field="format">Format</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>

  </thead>

    <tbody>
                {% for item in liste %}

  <tr>
        <th scope="row">{{ item.artist }}</th>
<td>{{ item.album }}</td>
    <td>{{ item.format }}</td>
    <td><a href="{{ path('update', { 'id': item.id }) }}">
    <img src="{{ asset('/pics/pen.jpg') }}" alt="pen logo">
</a></td>
    <td><a href="{{ path('delete', { 'id': item.id }) }}">
    <img src="{{ asset('/pics/trash.png') }}" alt="trash logo">
</a></td>
  </tr>
  {% endfor %}

      </tbody>

  </table>


{% endblock %}
